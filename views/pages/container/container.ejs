<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8' />
    <title>Local search app</title>
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
    <script src='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
    <link href='/css/style.css' rel='stylesheet' />


</head>

<body>

    <a href="/createcontainer">Add container</a>
    <div class="collection"></div>

    
    <% containerInfo.forEach((container) => { %>

    <a href="/container/<%= container._id %>" class="collection-item"><%= container.name %></a>

    <% }); %>
    </div>

    <div id='map'></div>
    <script>
    let containerInfo = <%- JSON.stringify(containerInfo) %>; //Outputs the unescaped value into the template
    </script>
    <script src="/js/map.js"></script>

</body>

</html>