<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Document</title>
   <link rel="stylesheet" href="/css/materialize.css">
</head>

<body>
   <div class="container">
      <div class="row">
         <a class="backBtn" onclick="window.history.back();">Retour</a>
         <h2 class="col s12">DÃ©tails du contenant</h2>
      </div>
      <div class="row">
         <div class="col s12 container-img">
            <% if (containerInfo.image!="noImage") {%>
            <img src="http://localhost:3000/img/container/<%= containerInfo.image.filename %>"
               alt="<%= containerInfo.name %>">
            <% } %>
         </div>
         <ul class="collection with-header">
            <li class="collection-header">
               <h4><%= containerInfo.name %></h4>
            </li>
            <li class="collection-item"><%= containerInfo.credit %></li>
            <li class="collection-item"><%= containerInfo.material %></li>
         </ul>

         
      </div>
      <% if (status=="partner" || status=="admin"){%>
      <div class="row">
         <a class="btn col s4 green darken-1 offset-s1" href="/updateContainer/<%= containerInfo._id %>">Edit</a>
         <a class="btn col s4 green darken-1 offset-s2" href="/api/container/delete/<%= containerInfo._id %>/<%= containerInfo.partnerId %>">Delete</a>
      </div>
      <% } %>
   </div>

   <script src="/js/bin/materialize.js"></script>
    <script src="/js/bin/materialize-init.js"></script>
</body>

</html>