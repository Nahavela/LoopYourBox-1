<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Account</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/myaccount.css">
    <script src="https://kit.fontawesome.com/ade53cd309.js" crossorigin="anonymous"></script>
</head>

<body>
    <!-- NARBAR -->
    <%- include('../../layouts/navbar.ejs') -%>

    <main class="container">


        <div class="user">
            <div class="user_icon">
                <i class="far fa-5x fa-user-circle"></i>
            </div>
            <div class="user_info">
                <div class="user_info-name"><%= userInfo.firstname %> <%= userInfo.lastname %></div>
                <div class="user_info-status"><%= userInfo.status %></div>
            </div>
        </div>


        <div class="setting-wrapper">
            <div class="user_account">
                <div class="user_account-heading padding">Mon compte</div>
                <div class="link padding">
                    <a class="col s4 offset-s1 btn green darken-1" href="/updateUser/<%= userInfo._id %>">Modifier mes
                        informations</a> <i class="fas fa-chevron-right"></i>
                </div>
                <div class="link padding">
                    <a class="col s4 offset-s2 btn green darken-1" href="/api/user/delete/<%= userInfo._id %>">Supprimer
                        mon
                        compte</a> <i class="fas fa-chevron-right"></i>
                </div>

            </div>

            <% if(userInfo.status =="partner") {%>
            <div class="partner_account">
                <div class="partner_account-heading padding">Partenaire</div>
                <div class="link padding">
                    <a href="/mypartner">Mon partenaire</a> <i class="fas fa-chevron-right"></i>
                </div>
            </div>
            <%}%> 
    
            <% if(userInfo.status =="partner" || userInfo.status =="member") {%>
            <div class="container_account">
                <div class="container_account-heading padding">Contenants</div>
                <div class="link padding">
                    <a href="/mycontainer">Mes contenants</a> <i class="fas fa-chevron-right"></i>
                </div>
            </div>
            <%}%>
    
                <% if(userInfo.status =="admin") {%>
            <div class="admin_account">
                <div class="admin_account-heading padding">Dashboard</div>
                <div class="link padding">
                    <a href="/dashboard">Dashboard</a> <i class="fas fa-chevron-right"></i>
                </div>
            </div>
            <%}%>
    
            <div class="padding" id="logout">
                <a href="/api/logout">DÃ©connexion</a> 
            </div>
        </div>

    </main>
</body>
</html>