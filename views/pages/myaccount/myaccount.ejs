<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>User Account</title>
   <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/materialize.css">
   <script src="https://kit.fontawesome.com/ade53cd309.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- NARBAR -->
    <%- include('../../layouts/navbar.ejs') -%>
    <div class="container">
        <div class="row">
            <ul class="collection with-header">
                <li class="collection-header"><h4><%= userInfo.firstname %> <%= userInfo.lastname %></h4></li>
                <li class="collection-item"><%= userInfo.status %></li>
            </ul>
            <div>
                <h5>Mon compte</h5>
            <p><a class="col s12" href="/updateUser/<%= userInfo._id %>">Modifier mes informations</a></p>
            <p><a class="col s12" href="/changepassword/<%= userInfo._id %>">Modifier mon mot de passe</a></p>
            <p><a class="col s12 modal-trigger" href="#modal">Supprimer mon compte</a></p>
  
            </div>
                  <!-- Modal Structure -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <h4>Supprimer son compte ? </h4>
    </div>
    <div class="modal-footer">
      <a href="/api/user/delete/<%= userInfo._id %>" class="modal-close waves-effect waves-green btn-flat">Confirmer</a>
      <a href="#" class="modal-close waves-effect waves-green btn-flat">Annuler</a>
    </div>
  </div>
            <% if(userInfo.status !="admin") {%>
            <div>
                <h5>Historique</h5>
                <p><a href="/myhistory/<%= userInfo._id %>">Mon historique</a></p>
            </div>
            <%}%> 


            <% if(userInfo.status =="partner") {%>
            <div>
                <h5>Partenaire</h5>
                <% if (!partnerInfo) {%> 
                    <a  href="/createpartner">Ajouter</a>
                <%} else {%> 
                    <a href="/updatePartner/<%= partnerInfo._id %>">Modifer</a>
                <%}%>
            </div>
            <%}%> 
        

            <% if(userInfo.status =="partner" || userInfo.status =="member") {%>
            <div>
                <h5>Contenants</h5>
            <p><a href="/mycontainer/<%= userInfo._id %>">Mes contenants</a></p>
            </div>
            <%}%>

            <% if(userInfo.status =="admin") {%>
            <div>
                            <h5>Dashboard</h5>
            <p><a href="/dashboard">Dashboard</a></p>
            </div>
            <%}%>
            <div>
                <h5>Informations</h5>
            <p><a href="/cgv">Conditions générales de vente</a></p>
            <p><a href="/faq">FAQ</a></p>
            <p><a href="/contact">Contact</a></p>
            <p><a href="/aboutus">A propos</a></p>
            </div>
            <div>
                <h5>Déconnexion</h5>
            <p><a href="/api/logout">Déconnexion</a></p>
            </div>

        </div>

    </div>

 

    <script src="/js/bin/materialize.js"></script>
    <script src="/js/bin/materialize-init.js"></script>
</body>
</html>